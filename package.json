{
  "name": "tbat-mock-exam",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "db:backup": "ts-node scripts/backup/create-backup.ts",
    "db:restore": "ts-node scripts/backup/restore-backup.ts",
    "db:test-backup": "ts-node scripts/backup/test-backup-restore.ts",
    "db:rollback": "ts-node scripts/rollback/rollback-deployment.ts",
    "db:migrate": "ts-node scripts/migration/migrate-to-freemium.ts",
    "db:migrate:test": "ts-node scripts/migration/test-migration.ts",
    "db:verify": "ts-node scripts/monitoring/setup-monitoring.ts check",
    "monitoring:setup": "ts-node scripts/monitoring/setup-monitoring.ts setup",
    "monitoring:start": "ts-node scripts/monitoring/setup-monitoring.ts",
    "migration:all": "npm run db:backup && npm run db:migrate && npm run db:verify",
    "rollback:emergency": "npm run db:rollback",
    "stop:all": "npx kill-port 3000 3001 5000",
    "maintenance:enable": "echo 'Maintenance mode enabled'",
    "maintenance:disable": "echo 'Maintenance mode disabled'",
    "health:check": "npm run db:verify"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "ts-node": "^10.9.1",
    "turbo": "^1.13.4",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "pg": "^8.11.3"
  },
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}